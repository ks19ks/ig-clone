<h1>Login</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <%= f.label :email, 'メールアドレス', class: 'form-label mt-2' %>
  <%= f.email_field :email, class: 'form-control' %>
  <%= f.label :password, 'パスワード', class: 'form-label mt-2' %>
  <%= f.password_field :password, class: 'form-control' %>
  <%= f.submit 'Login', class: 'btn btn-primary mt-3' %>
<% end %>
