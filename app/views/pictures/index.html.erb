<h1>Pictures</h1>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-2">
  <% @pictures.each do |picture| %>
    <div class="col">
      <div class="card shadow-sm">
        <%= image_tag picture.image.url, class: 'bd-placeholder-img card-img-top', width: "100%", height: "225" %>
        <div class="card-body">
          <p class="card-text">
            <%= picture.comment %><br>
            <span class="text-muted">by <%= picture.user.name %></span>
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'View', picture, class: 'btn btn-sm btn-outline-secondary' %>
              <% if picture.user_id == current_user.id %>
                <%= link_to 'Edit', edit_picture_path(picture), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Delete', picture, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %>
              <% end %>
            </div>
            <small class="text-muted">
              <% if picture.created_at.strftime('%Y/%m/%d') == Time.now.strftime('%Y/%m/%d') %>
                <%= picture.created_at.strftime('%H:%M') %>
              <% else %>
                <%= picture.created_at.strftime('%Y/%m/%d') %>
              <% end %>
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
